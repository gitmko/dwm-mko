#!/usr/bin/env bash

mkdir -p /home/$SUDO_USER/.local/share/fonts/OTF
wget https://github.com/ryanoasis/nerd-fonts/releases/download/v3.0.2/FiraMono.zip -q
unzip -qq FiraMono.zip
command rm -f LICENSE
command rm -f readme.md
command rm -f FiraMono.zip
mv *.otf /home/$SUDO_USER/.local/share/fonts/OTF

echo "Font installed!"
