#!/usr/bin/env bash

oscheck="$(grep -Po "(?<=^ID=).+" /etc/os-release | sed 's/"//g')"

if [[ $oscheck == "arch" ]] 
then
	kernel() {
            echo -e " $(uname -r | sed s/1-1-zen//g)"
        }
elif [[ $oscheck == "debian" ]]
then
        kernel() {
            echo -e " $(uname -r | sed s/-amd64//g)"
        }
elif [[ $oscheck == "fedora"]]
then
        kernel() {
            echo -e " $(uname -r | sed s/-300.fc38.x86_64//g)"
        }
fi

get_datetime() {
    date +"|   %a %d %b %Y |   %I:%M %p"
}

get_status() {
    echo "$(kernel) $(get_datetime)";
}

while true
do
    xsetroot -name "$(get_status)";
    sleep 1m;
done
